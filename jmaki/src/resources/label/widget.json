{
    "name": "label",
    "type": "@JS_NAME@",
    "version": "@JS_VERSION@",
    "jmakiVersion": "1.8",
    "description": "Woodstock label widget.",
    "args": [
      {"accesskey": {
         "type": "STRING",
         "description": "Accessibility access key.",
         "defaultValue": ""}},
      {"className": {
         "type": "STRING",
         "description": "CSS selector.",
         "defaultValue": ""}},
      {"contents": {
         "type": "STRING",
         "description": "",
         "defaultValue": ""}},
      {"dir": {
         "type": "STRING",
         "description": "Specifies the directionality of text.",
         "defaultValue": "ltr"}},
      {"errorImage": {
         "type": "OBJECT",
         "description": "Image rendered when labeled element value is invalid.",
         "defaultValue": {"icon": "LABEL_INVALID_ICON"}}},
      {"htmlFor": {
         "type": "STRING",
         "description": "Identifier of the labeled component element.",
         "defaultValue": ""}},
      {"lang": {
         "type": "STRING",
         "description": "Specifies the language of attribute values and content.",
         "defaultValue": ""}},
      {"level": {
         "type": "INT",
         "description": "Text style level of label: 1, 2 or 3.",
         "defaultValue": 2}},
      {"onClick": {
         "type": "STRING",
         "description": "Mouse button is clicked on element.",
         "defaultValue": ""}},
      {"onDblClick": {
         "type": "STRING",
         "description": "Mouse button is double-clicked on element.",
         "defaultValue": ""}},
      {"onKeyDown": {
         "type": "STRING",
         "description": "Key is pressed down over element.",
         "defaultValue": ""}},
      {"onKeyPress": {
         "type": "STRING",
         "description": "Key is pressed and released over element.",
         "defaultValue": ""}},
      {"onKeyUp": {
         "type": "STRING",
         "description": "Key is released over element.",
         "defaultValue": ""}},
      {"onMouseDown": {
         "type": "STRING",
         "description": "Mouse button is pressed over element.",
         "defaultValue": ""}},
      {"onMouseOut": {
         "type": "STRING",
         "description": "Mouse is moved away from element.",
         "defaultValue": ""}},
      {"onMouseOver": {
         "type": "STRING",
         "description": "Mouse is moved onto element.",
         "defaultValue": ""}},
      {"onMouseUp": {
         "type": "STRING",
         "description": "Mouse button is released over element.",
         "defaultValue": ""}},
      {"onMouseMove": {
         "type": "STRING",
         "description": "Mouse is moved while over element.",
         "defaultValue": ""}},
      {"required": {
         "type": "BOOLEAN",
         "description": "Indicates labeled element is a required element.",
         "defaultValue": false}},
      {"requiredImage": {
         "type": "OBJECT",
         "description": "Image rendered when labeled element value is required.",
         "defaultValue": {"icon": "LABEL_REQUIRED_ICON"}}},
      {"style": {
         "type": "STRING",
         "description": "Specify style rules inline.",
         "defaultValue": ""}},
      {"title": {
         "type": "STRING",
         "description": "Provides a title for element.",
         "defaultValue": "Label widget"}},
      {"valid": {
         "type": "BOOLEAN",
         "description": "Indicates labeled element validation state.",
         "defaultValue": true}},
      {"value": {
         "type": "STRING",
         "description": "Label text value.",
         "defaultValue": ""}},
      {"visible": {
         "type": "BOOLEAN",
         "description": "Hide or show element.",
         "defaultValue": true}}
    ],
    "value": {
      "required": true,
      "type": "OBJECT",
      "defaultValue": {"value": "Label", "level": 2},
      "description": "Simple label without labeled element reference."
    },
    "config": {
      "type": {
        "id": "@JS_NAME@",
        "libs": [
          "@JS_PATH@/bootstrap.js"
        ],
        "resources": [ "../resources/" ]
        }
    }
}
