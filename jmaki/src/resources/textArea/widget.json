{
    "name": "textArea",
    "type": "@JS_NAME@",
    "version": "@JS_VERSION@",
    "jmakiVersion": "1.8",
    "description": "Woodstock textArea widget.",
    "args": [
      {"accesskey": {
         "type": "STRING",
         "description": "Shortcut key",
         "defaultValue": ""}},
      {"autoSave": {
         "type": "INT",
         "description": "Period at which contents of area is saved, in milliseconds.",
         "defaultValue": 0}},
      {"className": {
         "type": "STRING",
         "description": "CSS selector.",
         "defaultValue": ""}},
      {"cols": {
         "type": "INT",
         "description": "The width of the text area, in characters.",
         "defaultValue": 20}},
      {"dir": {
         "type": "STRING",
         "description": "Specifies the directionality of text.",
         "defaultValue": "ltr"}},
      {"disabled": {
         "type": "BOOLEAN",
         "description": "Disable element.",
         "defaultValue": false}},
      {"label": {
         "type": "OBJECT",
         "description": "Define a label widget properties.",
         "defaultValue": {"value": "Mylabel", "level": 2}}},
      {"lang": {
         "type": "STRING",
         "description": "Specifies the language of attribute values.",
         "defaultValue": ""}},
      {"onBlur": {
         "type": "STRING",
         "description": "Element lost focus.",
         "defaultValue": ""}},
      {"onClick": {
         "type": "STRING",
         "description": "Mouse button is clicked on element.",
         "defaultValue": ""}},
      {"onDblClick": {
         "type": "STRING",
         "description": "Mouse button is double-clicked on element.",
         "defaultValue": ""}},
      {"onFocus": {
         "type": "STRING",
         "description": "Element received focus.",
         "defaultValue": ""}},
      {"onKeyDown": {
         "type": "STRING",
         "description": "Key is pressed down over element.",
         "defaultValue": ""}},
      {"onKeyPress": {
         "type": "STRING",
         "description": "Key is pressed and released over element.",
         "defaultValue": ""}},
      {"onKeyUp": {
         "type": "STRING",
         "description": "Key is released over element.",
         "defaultValue": ""}},
      {"onMouseDown": {
         "type": "STRING",
         "description": "Mouse button is pressed over element.",
         "defaultValue": ""}},
      {"onMouseOut": {
         "type": "STRING",
         "description": "Mouse is moved away from element.",
         "defaultValue": ""}},
      {"onMouseOver": {
         "type": "STRING",
         "description": "Mouse is moved onto element.",
         "defaultValue": ""}},
      {"onMouseUp": {
         "type": "STRING",
         "description": "Mouse button is released over element.",
         "defaultValue": ""}},
      {"onMouseMove": {
         "type": "STRING",
         "description": "Mouse is moved while over element.",
         "defaultValue": ""}},
      {"readOnly": {
         "type": "BOOLEAN",
         "description": "Text cannot be entered or changed.",
         "defaultValue": false}},
      {"required": {
         "type": "BOOLEAN",
         "description": "A text value must be entered for this field.",
         "defaultValue": false}},
      {"rows": {
         "type": "INT",
         "description": "The length of the text area, in number of lines.",
         "defaultValue": 4}},
      {"style": {
         "type": "STRING",
         "description": "Specify style rules inline.",
         "defaultValue": ""}},
      {"tabIndex": {
         "type": "INT",
         "description": "Position in tabbing order.",
         "defaultValue": -1}},
      {"title": {
         "type": "STRING",
         "description": "Provides a title for element.",
         "defaultValue": "TextArea widget"}},
      {"valid": {
         "type": "BOOLEAN",
         "description": "If true, the text content is considered valid.",
         "defaultValue": true}},
      {"value": {
         "type": "STRING",
         "description": "Value of input.",
         "defaultValue": ""}},
      {"visible": {
         "type": "BOOLEAN",
         "description": "Hide or show element.",
         "defaultValue": true}}
    ],
    "value": {
      "required": false,
      "type": "OBJECT",
      "defaultValue": {}}
    },
    "config": {
      "type": {
        "id": "@JS_NAME@",
        "libs": [
            "@JS_PATH@/bootstrap.js",
            "@JS_PATH@/webui.js"
        ],
        "resources": [ "@JS_LIBPATH@" ]
        }
    }
}
