{
    "name": "accordion",
    "type": "@JS_NAME@",
    "version": "@JS_VERSION@",
    "jmakiVersion": "1.8",
    "description": "Woodstock accordion widget.",
    "args": [
        {
            "className": {
                "type": "STRING",
                "description": "CSS selector.",
                "defaultValue": "" 
            } 
        },
        {
            "collapseAllImage": {
                "type": "OBJECT",
                "description": "Image associated with collapse all icon",
                "defaultValue": {
                    
                } 
            } 
        },
        {
            "expandAllImage": {
                "type": "OBJECT",
                "description": "Image associated with expand all icon",
                "defaultValue": {
                    
                } 
            } 
        },
        {
            "id": {
                "type": "STRING",
                "description": "Uniquely identifies an element within a document.",
                "defaultValue": "" 
            } 
        },
        {
            "isRefreshIcon": {
                "type": "BOOLEAN",
                "description": "True if refresh icon should be set",
                "defaultValue": false 
            } 
        },
        {
            "multipleSelect": {
                "type": "BOOLEAN",
                "description": "Set to true if multiple tabs can be selected",
                "defaultValue": false 
            } 
        },
        {
            "refreshImage": {
                "type": "OBJECT",
                "description": "Image associated with refresh icon.",
                "defaultValue": {
                    
                } 
            } 
        },
        {
            "style": {
                "type": "STRING",
                "description": "Specify style rules inline.",
                "defaultValue": "" 
            } 
        },
        {
            "tabs": {
                "type": "ARRAY",
                "description": "Tabs constituting the accordion's children",
                "defaultValue": [
                    
                ] 
            } 
        },
        {
            "toggleControls": {
                "type": "BOOLEAN",
                "description": "Set to true if expand/collapse icons should be set.",
                "defaultValue": false 
            } 
        },
        {
            "visible": {
                "type": "BOOLEAN",
                "description": "Hide or show element.",
                "defaultValue": false 
            } 
        },
        {
            "id": {
                "type": "STRING",
                "description": "The id of the selected tab.",
                "defaultValue": "" 
            } 
        } 
    ],
    "value": {
      "required": true,
      "type": "OBJECT",
      "defaultValue": {items : 
           [
           {label : "Books", content : "Book content"},
           {id : "bar", label : "Magazines", include : "test.jsp", lazyLoad : true},
           {label : "Newspaper", content : "Newspaper content", selected : true}
           ]},
      "description": "Accordion"
    },
    "config": {
        "type": {
            "id": "@JS_NAME@",
            "libs": [
                "@JS_PATH@/bootstrap.js" 
            ],
            "resources": [
                "../resources/" 
            ] 
        } 
    },
   "topicInfo": {
        "type": "publish",
        "topicName": "/@JS_NS@/accordion/onSelect",
        "description": "Published when a tab is selected."
    }
}

 


