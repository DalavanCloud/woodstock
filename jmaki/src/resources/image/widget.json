{
    "name": "image",
    "type": "@JS_NAME@",
    "version": "@JS_VERSION@",
    "jmakiVersion": "1.8",
    "description": "Woodstock image widget.",
    "args": [
      {"alt": {
         "type": "STRING",
         "description": "Alternate text for image input.",
         "defaultValue": ""}},
      {"align": {
         "type": "STRING",
         "description": "Alignment of image input.",
         "defaultValue": ""}},
      {"border": {
         "type": "STRING",
         "description": "Size of border around image, in pixels.",
         "defaultValue": ""}},
      {"className": {
         "type": "STRING",
         "description": "CSS selector.",
         "defaultValue": ""}},
      {"dir": {
         "type": "STRING",
         "description": "Specifies the directionality of text.",
         "defaultValue": "ltr"}},
      {"height": {
         "type": "STRING",
         "description": "Overrides the image height.",
         "defaultValue": ""}},
      {"hspace": {
         "type": "STRING",
         "description": "Overrides the horizontal spacing around the image.",
         "defaultValue": ""}},
      {"icon": {
         "type": "STRING",
         "description": "Key of an image in the Theme; do not use with src.",
         "defaultValue": ""}},
      {"lang": {
         "type": "STRING",
         "description": "Specifies the language of attribute values and content.",
         "defaultValue": ""}},
      {"longDesc": {
         "type": "STRING",
         "description": "Specifies a long description for the image.",
         "defaultValue": ""}},
      {"onClick": {
         "type": "STRING",
         "description": "Mouse button is clicked on element.",
         "defaultValue": ""}},
      {"onDblClick": {
         "type": "STRING",
         "description": "Mouse button is double-clicked on element.",
         "defaultValue": ""}},
      {"onKeyDown": {
         "type": "STRING",
         "description": "Key is pressed down over element.",
         "defaultValue": ""}},
      {"onKeyPress": {
         "type": "STRING",
         "description": "Key is pressed and released over element.",
         "defaultValue": ""}},
      {"onKeyUp": {
         "type": "STRING",
         "description": "Key is released over element.",
         "defaultValue": ""}},
      {"onMouseDown": {
         "type": "STRING",
         "description": "Mouse button is pressed over element.",
         "defaultValue": ""}},
      {"onMouseOut": {
         "type": "STRING",
         "description": "Mouse is moved away from element.",
         "defaultValue": ""}},
      {"onMouseOver": {
         "type": "STRING",
         "description": "Mouse is moved onto element.",
         "defaultValue": ""}},
      {"onMouseUp": {
         "type": "STRING",
         "description": "Mouse button is released over element.",
         "defaultValue": ""}},
      {"onMouseMove": {
         "type": "STRING",
         "description": "Mouse is moved while over element.",
         "defaultValue": ""}},
      {"src": {
         "type": "STRING",
         "description": "The URI the image file; do not use with icon.",
         "defaultValue": ""}},
      {"style": {
         "type": "STRING",
         "description": "Specify style rules inline.",
         "defaultValue": ""}},
      {"tabIndex": {
         "type": "INT",
         "description": "Position in tabbing order.",
         "defaultValue": -1}},
      {"title": {
         "type": "STRING",
         "description": "Provides a title for element.",
         "defaultValue": "Image widget"}},
      {"visible": {
         "type": "BOOLEAN",
         "description": "Hide or show element.",
         "defaultValue": true}},
      {"vspace": {
         "type": "STRING",
         "description": "Overrides the vertical spacing around the image.",
         "defaultValue": ""}},
      {"width": {
         "type": "STRING",
         "description": "Overrides the image width.",
         "defaultValue": ""}}
    ],
    "value": {
      "required": true,
      "type": "OBJECT",
      "defaultValue": {"src": "image_Url"},
      "description": "Simply image using image source Url."
    },
    "config": {
      "type": {
        "id": "@JS_NAME@",
        "libs": [
            "@JS_PATH@/bootstrap.js",
            "@JS_PATH@/webui.js"
        ],
        "resources": [ "@JS_LIBPATH@" ]
        }
    }
}
