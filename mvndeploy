#!/bin/bash

# REMEMBER TO CHANGE THIS VERSION #!!!!!!
WOODSTOCK_VER="4.0.2.5"
REPO_INFO="-Durl=java-net:/maven2-repository/trunk/repository/ -DrepositoryId=maven2-repository.dev.java.net"

mvn deploy:deploy-file -f ./deploy.pom -Dfile=webui/netbeans/modules/autoload/ext/webui-jsf.jar \
                         -Dsources=webui/dist/webui-jsf-src.zip\
                         -Djavadoc=webui/dist/webui-jsf-doc.zip \
                         -DgroupId=com.sun.woodstock \
                         -DartifactId=webui-jsf \
                         -Dversion=$WOODSTOCK_VER \
                         -Dpackaging=jar $REPO_INFO

mvn deploy:deploy-file -f ./deploy.pom -Dfile=themes/dist/webui-jsf-suntheme.jar \
                         -DgroupId=com.sun.woodstock \
                         -DartifactId=webui-jsf-suntheme \
                         -Dversion=$WOODSTOCK_VER \
                         -Dpackaging=jar $REPO_INFO

mvn deploy:deploy-file -f ./deploy.pom -Dfile=webui/lib/external/json.jar \
                         -DgroupId=com.sun.woodstock.dependlibs \
                         -DartifactId=json \
                         -Dversion=1.0 \
                         -Dpackaging=jar $REPO_INFO

mvn deploy:deploy-file -f ./deploy.pom -Dfile=webui/lib/external/dojo-0.4.1-ajax.jar \
                         -DgroupId=com.sun.woodstock.dependlibs \
                         -DartifactId=dojo-ajax \
                         -Dversion=0.4.1 \
                         -Dpackaging=jar $REPO_INFO

mvn deploy:deploy-file -f ./deploy.pom -Dfile=webui/lib/external/prototype-1.5.0.jar \
                         -DgroupId=com.sun.woodstock.dependlibs \
                         -DartifactId=prototype \
                         -Dversion=1.5.0 \
                         -Dpackaging=jar $REPO_INFO
